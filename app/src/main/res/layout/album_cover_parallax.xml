<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools">

    <us.koller.cameraroll.ui.widget.ParallaxImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:foreground="@drawable/ripple"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_to_dark_gradient">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!--<TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-monospace"
                android:textColor="@color/white_translucent1"
                android:textSize="12sp" />-->

            <TextView
                android:id="@+id/count"
                fontPath="fonts/RobotoMono-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_translucent1"
                android:textSize="12sp"
                tools:ignore="MissingPrefix" />
            <!--android:fontFamily="sans-serif-monospace"-->
        </LinearLayout>

        <ImageView
            android:id="@+id/removable_storage_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_sd_storage_white_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/hidden_folder_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:alpha="0.7"
            android:contentDescription="@string/hidden_folder_indicator"
            android:src="@drawable/ic_eye_off_white_24dp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
